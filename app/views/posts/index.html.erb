<p id="notice"><%= notice %></p>
<div style="text-align:center;">
<h1>Add/Remove Prompts</h1>

<%= link_to 'New Post', new_post_path, class: "btn btn-sm btn-dark" %>
<%= link_to 'Back to main', root_path, class: "btn btn-sm btn-dark"  %>
<br><br>
<table style="background-color:white; margin-left: auto;margin-right: auto;">
  <thead>
    <tr>
      <th>Prompt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.prompt %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-outline-dark"  %></td>
        <td><%= link_to 'Destroy', post, class: "btn btn-sm btn-outline-dark",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>